<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/quiz"
    tools:context=".MainActivity">
    <TextView
        android:id="@+id/tvName"
        android:gravity="center"
        android:textSize="40dp"
        android:textStyle="bold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <Button
        android:id="@+id/buttonCreateNewBank"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="100dp"
        android:scaleX="1.5"
        android:text="Create A New Bank"
        android:textStyle="bold" />
    <Button
        android:id="@+id/buttonAddNewQues"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:scaleX="1.5"
        android:text="Add A New Question"
        android:textStyle="bold" />
    <Button
        android:id="@+id/buttonListBanks"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:scaleX="1.5"
        android:text="My Banks"
        android:textStyle="bold" />
    <Button
        android:id="@+id/buttonHistory"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:scaleX="1.5"
        android:text="View History"
        android:textStyle="bold" />
    <Button
        android:id="@+id/buttonEditProfile"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:scaleX="1.5"
        android:text="My Profile"
        android:textStyle="bold" />

    <Button
        android:id="@+id/buttonLogOut"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginTop="20dp"
        android:scaleX="1.5"
        android:text="Log out"
        android:textStyle="bold" />

</LinearLayout>